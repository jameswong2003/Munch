        new Restaurant { Name = "Burger Barn", Description = "Home of the best burgers in town.", ImageUrl = "images/burger-barn.jpg" }
    };

    User CurrentUser = new User();
    List<Restaurant> PastRestaurants = new List<Restaurant>{};
